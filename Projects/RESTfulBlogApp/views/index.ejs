<%- include("partials/header") %>
<h1>HELLO</h1>

<%blogs.forEach(function(blog){ %>
<div>
  <h2><%= blog.title%></h2>
  <img src="<%=blog.image%>" />
  <span><%=blog.created%></span>
  <!-- takes first 100 characters from body-->
  <p><%=blog.body.substring(0, 100) %>...</p>
  <a href="/blogs/<%= blog._id%>">Read More</a>
</div>
<%});%>

<br />
